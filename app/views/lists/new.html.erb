<div class="row">
  <div class="col-md-8">
    <%= render 'shared/loading' %>
    <div class="new-list">
    <p class="lead">Type the Twitter username of the person whose timeline youâ€™d like to read</p>
    <%= form_tag('/lists', method: :post, class:"form", id:'create-list') do %>
    <div class="form-group">
      <%= text_field_tag 'username', "", class: "form-control input-mobile", id: "username"%>
    </div>
    <%= submit_tag 'Create List', class: "btn btn-default btn-mobile btn-outline" %>
