<row>
  <div class="col-md-8">
    <h1>FreshPerspective</h1>
    <p class="lead">Type in the username of the person whose timeline you’d like to read.</p>
    <%= form_tag('/lists', method: :post, class:"form") do %>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">@</div>
              <%= text_field_tag 'username', "", class: "form-control input-lg"%>
            </div>
          </div>
          <%= submit_tag 'Create List', class: "btn btn-default btn-mobile btn-outline" %>
      <% end %>
      <br/>
      <p class="small">Note: Twitter is strict about how many lists you can create and how many users you can follow. If you get an error, you’ll probably have to try again later.</p>
      <%= link_to 'Sign in with another account', logout_path, method: :delete, class:"small" %>
  </div>
</row>
